<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_bunlo"
        android:layout_width="match_parent"
        android:layout_height="200dp"></android.support.v4.view.ViewPager>
    <LinearLayout
       android:orientation="horizontal"

        android:id="@+id/linear01"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/viewpager_bunlo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></LinearLayout>
    <com.bwei.taotiao.view.XListView
        android:id="@+id/xlistview_tt"
        android:layout_below="@+id/viewpager_bunlo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.bwei.taotiao.view.XListView>

</RelativeLayout>
